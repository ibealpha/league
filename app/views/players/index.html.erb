<% @players = Player.find(:all, :order => 'team') %>

<h1>Listing Players</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Team</th>
    <th>Role</th>
  </tr>
 
  <% @players.each do |player| %>
    <tr>
      <td><%= link_to player.name, player_path(player) %></td>
      <td><%= player.team %></td>
      <td><%= player.role %></td>
    </tr>
  <% end %>
</table>